{
  "apps": [
    {
      "name": "server",
      "interpreter": "bash",
      "script": "scripts/start.sh",
      "instances": 1,
      "exec_mode": "fork",
      "watch": ["src/**/*.ts", "src/**/*.json"],
      "watch_delay": 1000,
      "error_file": "logs/error.log",
      "out_file": "logs/output.log",
      "time": true,
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}
